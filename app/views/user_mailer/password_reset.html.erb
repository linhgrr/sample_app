<div class="container mt-5 d-flex justify-content-center">
  <div class="card shadow-sm p-4" style="max-width: 600px; width: 100%;">
    <h2 class="mb-4 text-primary text-center"><%= t(".title") %></h2>

    <p class="mb-3"><%= t(".instruction") %></p>

    <div class="text-center mb-4">
      <%= link_to t(".reset_button"), edit_password_reset_url(id: @user.reset_token, email: @user.email), class: "btn btn-primary btn-lg" %>
    </div>

    <p class="text-muted mb-3">
      <%= t(".expiry_notice").html_safe %>
    </p>

    <p class="text-muted">
      <%= t(".ignore_message") %>
    </p>
  </div>
</div>
