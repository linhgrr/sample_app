<%= form_for @user do |f| %>
  <%= render "shared/error_messages" %>
  <%= f.label :name, t(".name_label") %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :email, t(".email_label") %>
  <%= f.email_field :email, class: "form-control" %>
  <%= f.label :birthday, t(".birthday_label") %>
  <%= f.date_field :birthday, class: "form-control" %>
  <%= f.label :gender, t(".gender_label") %>
  <%= f.select :gender, options_for_select(gender_options, @user.gender), {prompt: t(".select_gender")}, {class: "form-control"} %>
  <%= f.label :password, t(".password_label") %>
  <%= f.password_field :password, class: "form-control" %>
  <%= f.label :password_confirmation, t(".password_confirmation_label") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
