<% provide(:title, t(".title")) %>
<div class="row">
  <div class="col-md-8">
    <h1><%= t(".heading") %></h1>
    
    <div class="hello-message">
      <h2><%= t(".hello_name", name: @user_name) %></h2>
    </div>
    
    <p><%= t(".description") %></p>
    
    <div class="contact-info">
      <h3><%= t(".contact_info") %></h3>    
      <ul class="list-unstyled">
        <li>
          <strong><%= t(".email_label") %></strong>
          <%= mail_to @contact_email %>
        </li>
        <li>
          <strong><%= t(".address_label") %></strong>
          <%= t(".address") %>
        </li>
        <li>
          <strong><%= t(".phone_label") %></strong>
          <%= t(".phone") %>
        </li>
      </ul>
    </div>
    
    <div class="app-info">
      <h3><%= t(".app_information") %></h3>
      <p><strong><%= t(".app_label") %></strong> <%= @app_name %></p>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="well">
      <h4><%= t(".quick_links") %></h4>
      <ul class="list-unstyled">
        <li><%= link_to t("navigation.home"), root_path %></li>
        <li><%= link_to t("navigation.help"), static_pages_help_path %></li>
      </ul>
    </div>
  </div>
</div> 
