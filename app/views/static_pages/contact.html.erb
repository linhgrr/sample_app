<% provide(:title, t("static_pages.contact.title")) %>
<div class="row">
  <div class="col-md-8">
    <h1><%= t("static_pages.contact.heading") %></h1>
    
    <div class="hello-message">
      <h2><%= t("static_pages.contact.hello_name", name: @user_name) %></h2>
    </div>
    
    <p><%= t("static_pages.contact.description") %></p>
    
    <div class="contact-info">
      <h3><%= t("static_pages.contact.contact_info") %></h3>    
      <ul class="list-unstyled">
        <li>
          <strong><%= t("static_pages.contact.email_label") %></strong>
          <%= mail_to @contact_email %>
        </li>
        <li>
          <strong><%= t("static_pages.contact.address_label") %></strong>
          <%= t("static_pages.contact.address") %>
        </li>
        <li>
          <strong><%= t("static_pages.contact.phone_label") %></strong>
          <%= t("static_pages.contact.phone") %>
        </li>
      </ul>
    </div>
    
    <div class="app-info">
      <h3><%= t("static_pages.contact.app_information") %></h3>
      <p><strong><%= t("static_pages.contact.app_label") %></strong> <%= @app_name %></p>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="well">
      <h4><%= t("static_pages.contact.quick_links") %></h4>
      <ul class="list-unstyled">
        <li><%= link_to t("navigation.home"), root_path %></li>
        <li><%= link_to t("navigation.help"), static_pages_help_path %></li>
      </ul>
    </div>
  </div>
</div> 
